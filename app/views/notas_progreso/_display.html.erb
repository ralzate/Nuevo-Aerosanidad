



<div class="container-fluid">

  <div class="row">

    <div class="col-lg-12">




    <span  class="btn btn-link btn-xs  pull-left pagination pagination"><h1 class="title">Notas de Evolución</h1></span>



  
<% if current_user.rol_id != 3 %>
    <span  class="pagination pull-right"><%= link_to 'Nueva Nota de Evolución', new_paciente_historia_clinica_nota_progreso_path(@paciente,@historia_clinica,@nota_progreso), :class => "btn   btn-info color_blanco" %></span>
<% end %>



<div class="row">
  <div class="col-md-12 col-md-offset-2" style="margin-top: -20px;">
    <span class="btn btn-link btn-xs">  
      <%= will_paginate @notas_progreso, renderer: BootstrapPagination::Rails, :previous_label => 'Atras', :next_label => 'Siguiente' %>
    </span>
  </div>
</div>    



<table class="table table-bordered table-hover">



  <thead>
<tr>
      <th  colspan="7">
        
                            <%= form_tag request.path, :method => 'get', :class => '' do %>

<div>
  <div class="row">

    <div class="col-lg-5 ">

            <div class="input-group custom-search-form">
              <%= text_field_tag :search, params[:search], :placeholder => "Busca por el Nombre", :class => 'form-control' %>
              <span class="input-group-btn">


<%= button_tag(type: "submit", class: "btn principal") do %>
              <span class="glyphicon glyphicon-search"></span>
                          <% end %>

             </span>
             </div><!-- /input-group -->
        </div>
  </div>
</div>
                    <% end %>



      </th>

</tr>


    <tr class="x1">
      <th width="3% !important;">Id</th>
      <th width="15% !important;">Fecha y Hora</th>
      <th width="30% !important;">Descripción</th>
      <th width="20% !important;">Responsable</th>
      <th width="15% !important;">Cargo</th>
      <th width="15% !important;">Opciones</th>
    </tr>

<% @notas_progreso.each do |nota_progreso| %>

  <tr class="x">


    <td><%= nota_progreso.id %></td>
    <td><%= nota_progreso.created_at.strftime("%d-%m-%Y") %> <%= nota_progreso.created_at.strftime("%X")  %></td>
    <td><%= nota_progreso.descripcion %></td>
    <td><%= nota_progreso.user.nombres %> <%= nota_progreso.user.apellidos %></td>
    <td><%= nota_progreso.user.rol.nombre %></td>

<td>

    <%= link_to 'Mostrar',  paciente_historia_clinica_nota_progreso_path(@paciente,@historia_clinica,nota_progreso),  :rel => "tooltip", :title => "Mostrar", :class => 'btn btn-primary btn-xs color_blanco principal'%>





    <%= link_to 'Editar', edit_paciente_historia_clinica_nota_progreso_path(@paciente,@historia_clinica,nota_progreso),  :rel => "tooltip", :title => "Editar", :class => 'btn btn-primary btn-xs color_blanco principal' %>
</td>

  </tr>
  
<% end %>

</table>


<style type="text/css">

.eliminar {
    color: red;
}

</style>

