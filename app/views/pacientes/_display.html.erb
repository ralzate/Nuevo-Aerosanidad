







<div class="container-fluid">

  <div class="row">

    <div class="col-lg-12">




    <span  class="btn btn-link btn-xs  pull-left pagination pagination"><h1 class="title">Pacientes</h1></span>




<% if current_user.rol_id != 3 %>
    <span  class="btn btn-link btn-xs pull-right" style="margin-top: 20px !important;">
      <%= link_to 'Nuevo Paciente', new_paciente_path, :class => "btn btn-info color_blanco" %>
    </span>
<% end %>


<div class="row" >
  <div class="col-lg-12 col-md-offset-2" style="margin-top: -40px;">
     <%= will_paginate @roles, renderer: BootstrapPagination::Rails, :previous_label => 'Atras', :next_label => 'Siguiente' %>
   </div>
</div>   


<table class="table table-bordered table-hover">



  <thead>
<tr>
      <th  colspan="5">

                            <%= form_tag request.path, :method => 'get', :class => '' do %>

<div>
  <div class="row">

    <div class="col-lg-8">

            <div class="input-group custom-search-form">
              <%= text_field_tag :search, params[:search], :placeholder => "Busca por el Nombre", :class => 'form-control' %>
              <span class="input-group-btn">


<%= button_tag(type: "submit", class: "btn principal") do %>
              <span class="glyphicon glyphicon-search"></span>
                          <% end %>

             </span>
             </div><!-- /input-group -->
        </div>

    <div class="col-lg-4">

        <a class="btn icon-btn btn-primary" href="#"><span class="glyphicon btn-glyphicon glyphicon glyphicon-user img-circle text-primary"></span>Numero de Pacientes registrados <%= Paciente.count %></a>

    </div>


  </div>
</div>
                    <% end %>



      </th>

</tr>


    <tr class ="x1" >
      <th width="4% !important;">Id</th>
      <th width="20% !important;">Nombre</th>
      <th width="20% !important;">Documento</th>
      <th width="15% !important;">Fecha y Hora</th>
      <th width="29% !important;">Opciones</th>
    </tr>
  </thead>
  <tbody>

<% @pacientes.each do |paciente| %>

  <tr class ="x">


    <td><%= paciente.id %></td>
    <td><%= paciente.primer_nombre.capitalize %> <%= paciente.primer_apellido.capitalize %></td>
    <td><%= paciente.documento %></td>
    <td><%= paciente.created_at.strftime "%d-%m-%Y" %> <%= paciente.created_at.strftime("%X") %></td>

<td>

    <%= link_to 'Mostrar',  paciente,  :rel => "tooltip", :title => "Mostrar", :class => 'btn btn-primary btn-xs color_blanco principal'%>

<% if current_user.rol_id != 3 %>
    <%= link_to 'Editar', edit_paciente_path(paciente),  :rel => "tooltip", :title => "Editar", :class => 'btn btn-primary btn-xs color_blanco principal' %>
<% end %>

        <%= link_to 'Ver Historias Clinicas(' + paciente.historias_clinicas.count.to_s + ')' , paciente_historias_clinicas_path(paciente), :class => 'btn btn-primary btn-xs color_blanco principal' %>




</td>

  </tr>

<% end %>

</table>


</div>
