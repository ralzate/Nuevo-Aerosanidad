<tr class = "x" id=<%= "aeropuerto_#{aeropuerto.id}" %>
  >
  <td>
    <%= aeropuerto.id %></td>
  <td>
    <%= aeropuerto.nombre.capitalize %></td>
  <td>
    <%= aeropuerto.ciudad.nombre.capitalize %></td>

  <td>

    <style type="text/css" media="screen">
.icono {
    font-size: 16px;
    color: #848484;
}
.ver_notas{
color: #666;
}
</style>

    <%= link_to aeropuerto, :remote =>
    true, class: "btn btn-link btn-xs", title: "Ver Aeropuerto", :remote => true do %> <i class="glyphicon glyphicon-eye-open icono"></i>
    <% end %>

    <%= link_to edit_aeropuerto_path(aeropuerto), :remote =>
    true, class: "btn btn-link btn-xs", title: "Editar Aeropuerto" do %> <i class="glyphicon glyphicon-pencil icono"></i>
    <% end %></td>
</tr>