  </th>

</tr>


    <tr class="x1">
      <th width="3% !important;">Id</th>
      <th width="18% !important;">Nombres y Apellidos</th>
      <th width="10% !important;">Aprobado Ingresar</th>
      <th width="4% !important;">Email</th>
      <th width="12% !important;">Tipo De Documento</th>
      <th width="8% !important;">Documento</th>
      <th width="5% !important;">Opciones</th>
    </tr>
  </thead>
  <tbody>

<% @users.each do |user| %>

  <tr class="x">


    <td><%= user.id %></td>
    <td><%= user.nombres.capitalize %> <%= user.apellidos.capitalize %></td>
    <% if user.aprobado_login == 'Si' %>
    <td style= "text-align:center;" class="success"><%= user.aprobado_login %></td>
    <% elsif user.aprobado_login == 'No' %>

    <td style= "text-align:center;" class="danger"><%= user.aprobado_login %></td>
    <% end %>

    <td><%= user.email %></td>
    <td><%= user.tipo_documento %></td>
    <td><%= user.documento %></td>

<td>

 

