



<div class="container-fluid">

  <div class="row">

    <div class="col-lg-12">




    <span  class="btn btn-link btn-xs  pull-left pagination pagination"><h1 class="title">Usuarios</h1></span>



    <span class="btn btn-link btn-xs pull-right ">  <%= will_paginate @users, renderer: BootstrapPagination::Rails, :previous_label => 'Atras', :next_label => 'Siguiente' %>


</span>

<% if current_user.rol_id != 3 %>
    <span  class="btn btn-link btn-xs pull-right" style="margin-top:18px;"><%= link_to 'Nuevo Usuario', new_user_path, :class => "btn btn-info color_blanco" %></span>
<% end %>





<table class="table table-bordered table-hover">



  <thead>
<tr>
      <th  colspan="3">

                            <%= form_tag request.path, :method => 'get', :class => '' do %>

<div>
  <div class="row">

    <div class="col-lg-5 ">

            <div class="input-group custom-search-form">
              <%= text_field_tag :search, params[:search], :placeholder => "Busca por el Nombre", :class => 'form-control' %>
              <span class="input-group-btn">


<%= button_tag(type: "submit", class: "btn principal") do %>
              <span class="glyphicon glyphicon-search"></span>
                          <% end %>

             </span>
             </div><!-- /input-group -->
        </div>
  </div>
</div>
                    <% end %>



      </th>

<th>

    <%= link_to "PDF", users_path(:format => "pdf"), target: '_blank',  :rel => "tooltip", :title => "Pdf", :class => 'btn btn-info color_blanco' %>
  </th>

</tr>


    <tr class="x1">
      <th width="4% !important;">Id</th>
      <th width="35% !important;">Nombre</th>
      <th width="35% !important;">Documento</th>
      <th width="26% !important;">Opciones</th>
    </tr>
  </thead>
  <tbody>

<% @users.each do |user| %>

  <tr class="x">


    <td><%= user.id %></td>
    <td><%= user.nombres %> <%= user.apellidos %></td>
    <td><%= user.documento %></td>

<td>

    <%= link_to 'Mostrar',  user,  :rel => "tooltip", :title => "Mostrar", :class => 'btn btn-primary btn-xs color_blanco principal'%>


    <%= link_to 'Editar', edit_user_path(user),  :rel => "tooltip", :title => "Editar", :class => 'btn btn-primary btn-xs color_blanco principal' %>



</td>

  </tr>

<% end %>

</table>



</div>
