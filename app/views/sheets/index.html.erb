<p id="notice">
  <%= notice %></p>

<h1>Listing Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
    <tr>
      <td>
        <%= sheet.nombre %></td>
      <td>
        <%= sheet.descripcion %></td>
      <td>
        <%= link_to 'Show', sheet %></td>
      <td>
        <%= link_to 'Edit', edit_sheet_path(sheet) %></td>
      <td>
        <%= link_to 'Destroy', sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %></tbody>
</table>

<br>

<%= link_to 'New Sheet', new_sheet_path %>